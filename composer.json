{
    "name": "annacmc/ai-content-strategist",
    "description": "Expose Jetpack Stats and content audit via WordPress Abilities API for AI assistants",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0",
        "automattic/jetpack-autoloader": "^3.1",
        "wordpress/abilities-api": "^0.4",
        "wordpress/mcp-adapter": "^0.3"
    },
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "config": {
        "allow-plugins": {
            "automattic/jetpack-autoloader": true
        },
        "optimize-autoloader": true
    }
}
